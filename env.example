# Docker Compose Environment Variables
# Copy this file to .env and modify as needed

# Transport Configuration
MCP_TRANSPORT=streamable-http
PORT=3000

# Logging Configuration
LOG_LEVEL=info                    # Options: error, warn, info, debug
MCP_DEBUG=0                       # Options: 0 (off), 1 (on)
MCP_QUIET=false                   # Options: true, false

# Server Configuration
NODE_ENV=production               # Options: production, development

# Debug Overrides
DEBUG_LEVEL=info                  # Override for debug level
VERBOSE_LOGGING=false             # Enable verbose logging

# Development Settings (when using dev profile)
# NODE_OPTIONS=--inspect=0.0.0.0:9229  # Enable Node.js inspector
