{
  "name": "mcp-read-website",
  "version": "0.1.0",
  "description": "Markdown Content Preprocessor - Fetch web pages, extract content, convert to clean Markdown",
  "main": "dist/index.js",
  "bin": {
    "mcp": "./dist/index.js",
    "mcp-read-website": "./dist/index.js",
    "mcp-read-website-serve": "./dist/serve.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "serve": "node dist/serve.js",
    "serve:dev": "tsx src/serve.ts",
    "test": "vitest",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "markdown",
    "web-scraper",
    "readability",
    "content-extraction",
    "rag",
    "llm",
    "claude",
    "cursor",
    "vscode"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@mozilla/readability": "^0.5.0",
    "commander": "^12.0.0",
    "fastmcp": "^3.1.0",
    "jsdom": "^24.0.0",
    "p-limit": "^5.0.0",
    "robots-parser": "^3.0.1",
    "turndown": "^7.1.3",
    "turndown-plugin-gfm": "^1.0.2",
    "undici": "^6.0.1"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^20.11.0",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "eslint": "^8.56.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^1.2.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module"
}
