{
  "name": "@just-every/mcp-read-website-fast",
  "version": "0.1.6",
  "description": "Markdown Content Preprocessor - Fetch web pages, extract content, convert to clean Markdown",
  "main": "dist/index.js",
  "bin": {
    "mcp-read-website-fast": "bin/mcp-read-website.js"
  },
  "files": [
    "dist/**/*",
    "bin/**/*",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.prod.json",
    "build:dev": "tsc",
    "dev": "tsx src/index.ts",
    "start": "node dist/index.js",
    "serve": "tsx src/serve.ts",
    "serve:dev": "tsx src/serve.ts",
    "test": "vitest",
    "test:deploy": "vitest run test/deployment.test.ts",
    "lint": "eslint src",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "mcp",
    "mcp-server",
    "model-context-protocol",
    "markdown",
    "web-scraper",
    "readability",
    "content-extraction",
    "rag",
    "llm",
    "claude",
    "cursor",
    "vscode"
  ],
  "author": "Just Every",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/just-every/mcp-read-website-fast.git"
  },
  "bugs": {
    "url": "https://github.com/just-every/mcp-read-website-fast/issues"
  },
  "homepage": "https://github.com/just-every/mcp-read-website-fast#readme",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.12.1",
    "@mozilla/readability": "^0.6.0",
    "commander": "^14.0.0",
    "jsdom": "^26.1.0",
    "p-limit": "^6.2.0",
    "robots-parser": "^3.0.1",
    "turndown": "^7.1.3",
    "turndown-plugin-gfm": "^1.0.2",
    "undici": "^7.10.0"
  },
  "devDependencies": {
    "@types/jsdom": "^21.1.6",
    "@types/node": "^24.0.0",
    "@types/turndown": "^5.0.4",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3",
    "vitest": "^3.2.3"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "type": "module"
}
